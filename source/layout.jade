html(lang='en', dir='ltr').no-js
	head
		meta(charset='utf-8')
		title= page.title
		meta(name='description', content=page.description)
		meta(name='author', content=page.author)
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		meta(name='keywords', content=page.keywords)
		meta(name='HandheldFriendly', content='True')
		meta(name='MobileOptimized', content='320')
		meta(name='viewport', content='width=device-width')
		link(rel='canonical', content=page.canonical)
		link(rel='alternative', title=site.title, type='application/atom+xml', href=site.rss)
		link(rel='author', href='/#author', title='About the author')
		link(rel='home', href='/', title='Home')
		link(rel='stylesheet', href=site.stylesheet)
		// Welcome to the source code. Enjoy yourself. Questions, concerns, comments, drop me a line.

	body(id=page.pageSlug, class=page.pageType)
		if page.pageSlug === 'home'
			header.page-header(role='banner')
				hgroup
					h1= site.title
					h2=site.subtitle
			nav.page-nav(role='navigation')
				ul
					li.nav-home
						a(href='/')= site.title
					li
						a(href='/posts') Posts
					li
						a(href='/#about') About
					li
						a(href='/#contact') Contact
					li.nav-search
						form#search(method='get', action='http://google.com/search', role='search')
							input(type='hidden', name='sitesearch', value=site.domain)
							input#q(type='search', name='q', placeholder='search')
			section.main(role='main')!= page.body
			footer.page-footer(role='contentinfo')
				h2 Colophon
				p Brought to you by <a href="http://octopress.org">Octopress</a> and the number 4.
			script(src='/javascripts/global.js')

