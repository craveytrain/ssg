{
    // Predefined globals whom JSHint will ignore.
    "node"       : true,   // Standard browser globals e.g. `window`, `document`.

    "predef"        : [  // Custom globals.
    ],

    // ECMAScript 5.
    "es5"           : true,   // Allow ECMAScript 5 syntax.
    "strict"        : true,  // Require `use strict` pragma  in every file.


    // The Good Parts.
    "boss"          : true,  // Tolerate assignments inside if, for & while. Usually conditions & loops are for comparison, not assignments.
    "eqeqeq"        : true,   // Require triple equals i.e. `===`.
    "forin"         : true,   // Require `for in` loops with `hasOwnPrototype`.
    "immed"         : true,   // Require immediate invocations to be wrapped in parens e.g. `( function(){}() );`
    "latedef"       : true,   // Prohipit variable use before definition.
    "noarg"         : true,   // Prohibit use of `arguments.caller` and `arguments.callee`.
    "regexp"        : true,   // Prohibit `.` and `[^...]` in regular expressions.
    "scripturl"     : true,   // Tolerate script-targeted URLs.
    "shadow"        : true,   // Allows re-define variables later in code e.g. `var x=1; x=2;`.
    "supernew"      : false,  // Tolerate `new function () { ... };` and `new Object;`.
    "undef"         : true,   // Require all non-global variables be declared before they are used.


    // Personal styling preferences.
    "newcap"        : true,   // Require capitalization of all constructor functions e.g. `new F()`.
    "noempty"       : true,   // Prohibit use of empty blocks.
    "nonew"         : true,   // Prohibit use of constructors for side-effects.
    "trailing"      : true,      // Prohibit trailing whitespaces.
    "quotmark"      : "single",  // Force single quote
	"camelcase"     : true    // Require all variables names to have camelCase
}
